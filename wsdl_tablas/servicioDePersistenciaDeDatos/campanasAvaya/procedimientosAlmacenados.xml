<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
	
<sqlMap namespace="campanas.procedimientosAlmacenados">	
    	
	<parameterMap id="setConsultaProductos" class="java.util.HashMap">
		<parameter property="maxFilas" 				jdbcType="INT" javaType="java.lang.Integer" />
	</parameterMap>
	<resultMap id="getConsultaProductos" class="java.util.HashMap">
		<result  property="codigo"								jdbcType="CHAR"  javaType="String" />
		<result  property="descripcion" 					jdbcType="VARCHAR"  javaType="String" />
	</resultMap>
	
	<procedure id="consultaProductos" parameterMap="setConsultaProductos" resultMap="getConsultaProductos">
		{CALL sp_con_productos (?)}
	</procedure>

  <parameterMap id="setObtenerClientesCampanasEjecutivos" class="java.util.HashMap">
		<parameter property="idproducto"         jdbcType="CHAR" javaType="String" />
		<parameter property="logejecutivo"       jdbcType="CHAR" javaType="String" />
		<parameter property="maximoFilas"        jdbcType="INT" javaType="java.lang.Integer" />
	</parameterMap>
	<resultMap id="getObtenerClientesCampanasEjecutivos" class="java.util.HashMap">
		<result  property="codigoCampana" 			jdbcType="CHAR"  javaType="String" />
		<result  property="rut" 								jdbcType="CHAR"  javaType="String" />
		<result  property="digito" 							jdbcType="CHAR"  javaType="String" />
	</resultMap>

	<procedure id="obtenerClientesCampanasEjecutivos" parameterMap="setObtenerClientesCampanasEjecutivos" resultMap="getObtenerClientesCampanasEjecutivos">
		{CALL sp_buscar_cli_eje_prod (?,?,?)}
	</procedure>
	
	<parameterMap id="setObtenerTelefonoCampana" class="java.util.HashMap">
		<parameter property="ofc_cod"         		jdbcType="CHAR" javaType="String" />
		<parameter property="ofc_crr"        			jdbcType="INT" javaType="java.lang.Integer" />
	</parameterMap>
	<resultMap id="getObtenerTelefonoCampana" class="java.util.HashMap">
		<result  property="descripcion" 					jdbcType="CHAR"  javaType="String" />
		<result  property="telefono" 							jdbcType="CHAR"  javaType="String" />
	</resultMap>

	<procedure id="obtenerTelefonoCampana" parameterMap="setObtenerTelefonoCampana" resultMap="getObtenerTelefonoCampana">
		{CALL sp_buscar_tel_cam (?,?)}
	</procedure>

</sqlMap>