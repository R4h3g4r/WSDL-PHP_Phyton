<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="firmascliente.procedimientosAlmancenados">
    <procedure id="obtenerApoderados"  parameterClass="java.util.HashMap" resultClass="java.util.HashMap">
      {CALL sp_obtener_apoderados(#numeroCuenta#)}
    </procedure>
    
    <procedure id="obtenerDatosFirmaPorCuenta"  parameterClass="java.util.HashMap" resultClass="java.util.HashMap">
      {CALL sp_obtener_datos_firma_por_cuenta(#numeroCuenta#)}
    </procedure>
    
    <procedure id="obtenerDatosFirmaPorRut"  parameterClass="java.util.HashMap" resultClass="java.util.HashMap">
      {CALL sp_obtener_datos_firma_por_rut(#rut#)}
    </procedure>
    
    <procedure id="obtenerFirmantes"  parameterClass="java.util.HashMap" resultClass="java.util.HashMap">
      {CALL sp_obtener_firmantes(#numeroCuenta#)}
    </procedure>
    
    <procedure id="obtenerPoderes"  parameterClass="java.util.HashMap" resultClass="java.util.HashMap">
      {CALL sp_obtener_poderes(#numeroCuenta#)}
    </procedure>

    <procedure id="obtenerDatosFirmaPorRutCliente"  parameterClass="java.util.HashMap" resultClass="java.util.HashMap">
      {CALL sp_obtener_datos_firma_por_cliente(#rut#)}
    </procedure>
    
    <procedure id="obtenerDatosFirmaPorFirmante"  parameterClass="java.util.HashMap" resultClass="java.util.HashMap">
      {CALL sp_obtener_datos_firma_por_firmante(#rut#)}
    </procedure>
	
</sqlMap>	
