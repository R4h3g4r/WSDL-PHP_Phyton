<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="BHEProbes.procedimientosAlmacenados">

	<!-- Inicio ResultMap y Procedure para Behavior Empresario -->

	<resultMap id="DatosLlamada" class="java.util.HashMap">
		<result property="codigo" javaType="String" column="cod_llamada" jdbcType="varchar"/>
	    <result property="estrategia" javaType="String" column="cod_estrategia" jdbcType="varchar"/>
	    <result property="nombre" javaType="String" column="nombre_llamada" jdbcType="varchar"/>
	</resultMap>

	<resultMap id="DatosEstrategia" class="java.util.HashMap">
		<result property="codigoEstrategia" javaType="String" column="cod_estrategia" jdbcType="varchar"/>
		<result property="aliasEstrategia" javaType="String" column="alias_estrategia" jdbcType="varchar"/>
	</resultMap>
	
	<procedure id="eliminarLlamada" parameterClass="java.util.HashMap">
		{CALL sp_behavior_eli_llamada(#codigoLlamada#)}
	</procedure>

	<procedure id="datosLlamada" resultMap="DatosLlamada" parameterClass="java.util.HashMap">
		{CALL sp_behavior_cns_llamadas()}
	</procedure>

	<procedure id="datosEstrategia" resultMap="DatosEstrategia" parameterClass="java.util.HashMap">
		{CALL sp_behavior_cns_estrategias()}
	</procedure>
	
	<procedure id="datosUnaEstrategia" resultMap="DatosEstrategia" parameterClass="java.util.HashMap">
		{CALL sp_behavior_cns_estrategia(#codigoLlamada#)}
	</procedure>

	<procedure id="modificarLlamada" parameterClass="java.util.HashMap">
		{CALL sp_behavior_mod_llamada(#codigoLlamada#,#estrategia#,#nombre#)}
	</procedure>

	<procedure id="guardarLlamada" parameterClass="java.util.HashMap">
		{CALL sp_behavior_ins_llamada(#codigoLlamada#,#estrategia#,#nombre#)}
	</procedure>

	<procedure id="obtenerLlamada" resultMap="DatosLlamada" parameterClass="java.util.HashMap" >
		{CALL sp_behavior_cns_llamada(#codigoLlamada#)}
	</procedure>
	
	<procedure id="obtenerEstrategiaAlias" resultMap="DatosEstrategia" parameterClass="java.util.HashMap" >
		{CALL sp_behavior_cns_aliasLlamada(#estrategia#)}
	</procedure>

	<!-- FIN ResultMap y Procedure para MBehavior Empresario -->


</sqlMap>
