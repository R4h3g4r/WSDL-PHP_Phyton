<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
	
<sqlMap namespace="mallvirtual.procedimientosAlmacenados">
	<parameterMap id="setRegistrarAccion" class="java.util.HashMap">
		<parameter property="idOrdenCompra"		jdbcType="CHAR"		javaType="String" />
		<parameter property="rutCliente"		jdbcType="INTEGER"	javaType="java.lang.Integer" />
		<parameter property="dvCliente"			jdbcType="CHAR"		javaType="String" />
		<parameter property="fecSolicitud"		jdbcType="DATETIME"	javaType="java.util.Date" />
		<parameter property="mtoCompra"			jdbcType="Double"	javaType="java.lang.Double" />
		<parameter property="codFormaPago"		jdbcType="CHAR"		javaType="String" />
		<parameter property="idTransaccion"		jdbcType="CHAR"		javaType="String" />
		<parameter property="codRechazo"		jdbcType="CHAR"		javaType="String" />
		<parameter property="codEstado"			jdbcType="CHAR"		javaType="String" />
	</parameterMap>
	<procedure id="registrarAccion" parameterMap="setRegistrarAccion" resultClass="int">
		{ CALL sp_InsertaCompra ( ?,?,?,?,?,?,?,?,? ) }
	</procedure>

</sqlMap>	

			