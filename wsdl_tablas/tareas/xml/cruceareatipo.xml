<?xml version="1.0"?>
<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN" "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport
		name="DataSourceReport"
		pageWidth="800"
		pageHeight="842"
		columnWidth="515"
		columnSpacing="0"
		leftMargin="40"
		rightMargin="40"
		topMargin="50"
		bottomMargin="50">
	<reportFont name="Arial_Normal" isDefault="true" fontName="Arial" size="12" pdfFontName="Helvetica" pdfEncoding="Cp1252" isPdfEmbedded="false"/>
	<reportFont name="Arial_Bold" isDefault="false" fontName="Arial" size="12" isBold="true" pdfFontName="Helvetica-Bold" pdfEncoding="Cp1252" isPdfEmbedded="false"/>
	<reportFont name="Arial_Italic" isDefault="false" fontName="Arial" size="12" isItalic="true" pdfFontName="Helvetica-Oblique" pdfEncoding="Cp1252" isPdfEmbedded="false"/>
	<parameter name="ReportTitle" class="java.lang.String"/>
	<parameter name="DataFile" class="java.lang.String"/>
    <parameter name="WebContext" class="java.lang.String"/>
	<field name="code" class="java.lang.String"/>
	<field name="ingresados" class="java.lang.Float"/>
	<field name="solucionados" class="java.lang.Float"/>
	<field name="cerrados" class="java.lang.Float"/>
   	<field name="StrDescripcion" class="java.lang.String"/>

        <variable name="ingresadosSumColumn" class="java.lang.Float" resetType="Page" calculation="Sum">
                <variableExpression>
                        $F{ingresados}
                </variableExpression>
        </variable>
        <variable name="solucionadosSumColumn" class="java.lang.Float" resetType="Page" calculation="Sum">
                <variableExpression>
                        $F{solucionados}
                </variableExpression>
        </variable>
        <variable name="cerradosSumColumn" class="java.lang.Float" resetType="Page" calculation="Sum">
                <variableExpression>
                        $F{cerrados}
                </variableExpression>
        </variable>
	<title>
		<band height="70">
			<textField isBlankWhenNull="true">
				<reportElement x="0" y="10" width="800" height="30"/>
				<textElement textAlignment="Center" lineSpacing="Single">
					<font reportFont="Arial_Normal" size="22"/>
				</textElement>
				<textFieldExpression class="java.lang.String">$P{ReportTitle}</textFieldExpression>
			</textField>
			<textField isBlankWhenNull="true">
				<reportElement x="0" y="40" width="800" height="20"/>
				<textElement textAlignment="Center" lineSpacing="Single">
					<font reportFont="Arial_Normal" size="14"/>
				</textElement>
				<textFieldExpression class="java.lang.String">$P{DataFile}</textFieldExpression>
			</textField>
		</band>
	</title>
	<pageHeader>
		<band height="20">
			<staticText>
				<reportElement x="0" y="5" width="100" height="15" forecolor="#FFFFFF" backcolor="#333333" mode="Opaque"/>
				<textElement textAlignment="Right"/>
				<text></text>
			</staticText>
			<staticText>
				<reportElement x="100" y="5" width="100" height="15" backcolor="#C0C0C0" mode="Opaque"/>
				<textElement textAlignment="Right"/>
				<text>Ingresados</text>
			</staticText>
			<staticText>
				<reportElement x="200" y="5" width="100" height="15" backcolor="#C0C0C0" mode="Opaque"/>
				<textElement textAlignment="Right"/>
				<text>Solucionados</text>
			</staticText>
			<staticText>
				<reportElement x="300" y="5" width="100" height="15" backcolor="#C0C0C0" mode="Opaque"/>
				<textElement textAlignment="Right"/>
				<text>Cerrados</text>
			</staticText>

		</band>
	</pageHeader>
	<detail>
		<band height="20">
			<textField hyperlinkType="Reference" pattern="0">
				<reportElement x="0" y="5" width="100" height="15" backcolor="#C0C0C0" mode="Opaque"/>
				<textElement textAlignment="Center">
				<font isUnderline="true"/>
				</textElement>
				<textFieldExpression class="java.lang.String">
					$F{StrDescripcion}
				</textFieldExpression>
                    <hyperlinkReferenceExpression>$P{WebContext} + "ReportServlet?reportName=Cruce&#32;area&#32;tipo&#40;Pedidos&#47;Solicitudes&#41;&#38;typeCode="+$F{code}</hyperlinkReferenceExpression>
			</textField>
			<textField pattern="0">
				<reportElement x="100" y="5" width="100" height="15" positionType="Float"/>
				<textElement textAlignment="Right"/>
				<textFieldExpression class="java.lang.Float">
					$F{ingresados}
				</textFieldExpression>
			</textField>
			<textField pattern="0">
				<reportElement x="200" y="5" width="100" height="15" positionType="Float"/>
				<textElement textAlignment="Right"/>
				<textFieldExpression class="java.lang.Float">
					$F{solucionados}
				</textFieldExpression>
			</textField>
			<textField pattern="0">
				<reportElement x="300" y="5" width="100" height="15" positionType="Float"/>
				<textElement textAlignment="Right"/>
				<textFieldExpression class="java.lang.Float">
					$F{cerrados}
				</textFieldExpression>
			</textField>
		</band>
	</detail>

	<summary>
 <band height="20">
                 <staticText>
                         <reportElement x="0" y="5" width="100" height="15" backcolor="#C0C0C0" mode="Opaque"/>
                         <textElement textAlignment="Center"/>
                         <text>Total </text>
                 </staticText>

                 <textField pattern="0" >
                         <reportElement x="100" y="5" width="100" height="15" backcolor="#C0C0C0" mode="Opaque"/>
                         <textElement textAlignment="Right"/>
                         <textFieldExpression class="java.lang.Float">
                                 $V{ingresadosSumColumn}
                         </textFieldExpression>
                 </textField>
                 <textField pattern="0" >
                         <reportElement x="200" y="5" width="100" height="15" backcolor="#C0C0C0" mode="Opaque"/>
                         <textElement textAlignment="Right"/>
                         <textFieldExpression class="java.lang.Float">
                                 $V{solucionadosSumColumn}
                         </textFieldExpression>
                 </textField>
                 <textField pattern="0" >
                         <reportElement x="300" y="5" width="100" height="15" backcolor="#C0C0C0" mode="Opaque"/>
                         <textElement textAlignment="Right"/>
                         <textFieldExpression class="java.lang.Float">
                                 $V{cerradosSumColumn}
                         </textFieldExpression>
                 </textField>
		</band>
	</summary>
</jasperReport>
